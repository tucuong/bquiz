<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>

    @(Html.Telerik().StyleSheetRegistrar().DefaultGroup(group => group.Add("telerik.common.css").Add("telerik.sitefinity.css").Combined(true).Compress(true)))</head>
<body>
    <div id="header">
        <div class="page">
            <div id="menu">
                <div style="display:inline-block; vertical-align:top; width:585px">
                    <table style="height:56px">
                        <tr>
                            <td style="width:30px">
                                <img src="../../Content/images/Statue%20Of%20Liberty.png" width="50" /></td>
                            <td style="width:70px">
                                <a href="/">
                                    <b style="font-family:'Century Gothic'; font-size:18px">bquiz</b>
                                </a>
                            </td>
                            <td></td>
                        </tr>
                    </table>
                </div>

                <div style="width:253px; display:inline-block; float:right">
                    @*@Html.Partial("/Views/Shared/_LogOnPartial.cshtml")*@
                </div>
            </div>
        </div>
    </div>

    <div class="page">

        <div id="Main">
            <div>
                <div id="MainPanel" style="min-height:360px">
                    @RenderBody()
                </div>

                <div id="RightPanel">
                    @RenderSection("RightPanel", required: false)
                    @Html.Action("EdittingMenu", "Part")
                </div>
            </div>
         </div>
    </div>

    @(Html.Telerik().ScriptRegistrar().DefaultGroup(group => group.Combined(true).Compress(true)))</body>
</html>
